<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnimgBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="47dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/color_base"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detail Suplier"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:paddingTop="9dp"
                        android:paddingLeft="20dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="20dp">

            //Nama Suplier
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Suplier"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#EEEE">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="5dp">

                    <TextView
                        android:id="@+id/txtNamaSuplier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Toko Jaya Abadi"
                        android:textSize="15sp"
                        android:paddingTop="5dp"
                        android:paddingLeft="5dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            //Domisili Suplier
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Domisili Suplier"
                android:paddingTop="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#EEEE">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="5dp">

                    <TextView
                        android:id="@+id/txtDomisiliSuplier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bekasi"
                        android:textSize="15sp"
                        android:paddingTop="5dp"
                        android:paddingLeft="5dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            //Alamat Suplier
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat Suplier"
                android:paddingTop="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#EEEE">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="5dp">

                    <TextView
                        android:id="@+id/txtAlamatSuplier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lorem Ipsum Lorem IpsumLorem IpsumLorem IpsumLorem IpsumLorem IpsumLorem IpsumLorem IpsumLorem IpsumLorem IpsumLorem IpsumLorem IpsumLorem Ipsum"
                        android:textSize="15sp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

                //Contact Person
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Person"
                    android:paddingTop="10dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manager Marketing"
                    android:paddingTop="5dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#373636"/>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="#EEEE">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_margin="5dp">

                        <TextView
                            android:id="@+id/txtNamaManager"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Budi Setiawan"
                            android:textSize="15sp"
                            android:paddingTop="5dp"
                            android:paddingLeft="5dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="#EEEE">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">

                        <TextView
                            android:id="@+id/txtNomorManager"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="081234567891"
                            android:textSize="15sp"
                            android:paddingTop="5dp"
                            android:paddingLeft="5dp"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_whatsapplogo"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingLeft="190dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Supervisor Marketing"
                    android:paddingTop="10dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#373636"/>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="#EEEE">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_margin="5dp">

                        <TextView
                            android:id="@+id/txtNamaSupervisor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Doni Salmundur"
                            android:textSize="15sp"
                            android:paddingTop="5dp"
                            android:paddingLeft="5dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="#EEEE">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">

                        <TextView
                            android:id="@+id/txtNomorSupervisor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="081234567891"
                            android:textSize="15sp"
                            android:paddingTop="5dp"
                            android:paddingLeft="5dp"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_whatsapplogo"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingLeft="190dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                //Edit
                <Button
                    android:id="@+id/btnEditSuplier"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="#4F9FC2"
                    android:textColor="#fff"
                    android:text="Edit"
                    android:textSize="15sp"/>

                //Hapus
                <Button
                    android:id="@+id/btnHapusSuplier"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="3dp"
                    android:backgroundTint="#E26060"
                    android:textColor="#fff"
                    android:text="Hapus"
                    android:textSize="15sp"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>