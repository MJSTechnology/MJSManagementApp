<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    //Header
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgbtnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_back"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:elevation="0dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#4F9FC2"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detail Toko"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingTop="9dp"
                    android:paddingLeft="20dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20sp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:cardCornerRadius="10dp"
        android:elevation="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="20dp">

            //Nama Toko
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Toko"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#EEEE">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="5dp">

                    <TextView
                        android:id="@+id/txtNamaToko"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Toko Jaya Abadi"
                        android:textSize="15sp"
                        android:paddingTop="5dp"
                        android:paddingLeft="5dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            //Domisili Toko
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Domisili Toko"
                android:paddingTop="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#EEEE">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="5dp">

                    <TextView
                        android:id="@+id/txtDomisiliToko"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bekasi"
                        android:textSize="15sp"
                        android:paddingTop="5dp"
                        android:paddingLeft="5dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            //Alamat Toko
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat Toko"
                android:paddingTop="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#EEEE">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="5dp">

                    <TextView
                        android:id="@+id/txtAlamatToko"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lorem Ipsum Lorem IpsumLorem IpsumLorem IpsumLorem IpsumLorem IpsumLorem IpsumLorem IpsumLorem IpsumLorem IpsumLorem IpsumLorem IpsumLorem Ipsum"
                        android:textSize="15sp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            //Status Toko
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status Toko"
                android:paddingTop="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#EEEE">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="5dp">

                    <TextView
                        android:id="@+id/txtStatusToko"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Milik Sendiri"
                        android:textSize="15sp"
                        android:paddingTop="5dp"
                        android:paddingLeft="5dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            //Nomor Pelanggan
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor Pelanggan"
                android:paddingTop="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#EEEE">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="5dp">

                    <TextView
                        android:id="@+id/txtNomorPelangganToko"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nomor Pelanggan"
                        android:textSize="15sp"
                        android:paddingTop="5dp"
                        android:paddingLeft="5dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*nomor pelanggan akan muncul jika sudah melakukan transaksi"
                android:textColor="#000"
                android:textSize="11sp"/>

            //Contact Person
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Person"
                android:paddingTop="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#EEEE">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">

                    <TextView
                        android:id="@+id/txtNamaKontakPerson"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Budi Setiawan"
                        android:textSize="15sp"
                        android:paddingTop="5dp"
                        android:paddingLeft="5dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#EEEE">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">

                    <TextView
                        android:id="@+id/txtNomorKontakPerson"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="081234567891"
                        android:textSize="15sp"
                        android:paddingTop="5dp"
                        android:paddingLeft="5dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_whatsapplogo"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="190dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#EEEEEE">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imgKtpToko"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/fotoktp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            //Foto Toko
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foto Toko"
                android:paddingTop="20dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#EEEEEE">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imgFotoToko"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/fototoko"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            //Lokasi Toko
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lokasi Toko"
                android:paddingTop="20dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000"/>

            <com.google.android.gms.maps.MapView
                android:id="@+id/mapsToko"
                android:layout_width="match_parent"
                android:layout_height="150dp" />

            //Edit
            <Button
                android:id="@+id/btnEditToko"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="#4F9FC2"
                android:textColor="#fff"
                android:text="Edit"
                android:textSize="15sp"/>

            //Hapus
            <Button
                android:id="@+id/btnHapusToko"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="50dp"
                android:backgroundTint="#E26060"
                android:textColor="#fff"
                android:text="Hapus"
                android:textSize="15sp"/>


        </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</LinearLayout>
