<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/imgbtnback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:elevation="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="#4F9FC2"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="Tambah Toko"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Toko"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edtNamaToko"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama toko"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Domisili Toko"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000"
                android:paddingTop="10dp"/>

            <EditText
                android:id="@+id/edtDomisiliToko"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Domisili toko"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat Toko"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000"
                android:paddingTop="10dp"/>

            <EditText
                android:id="@+id/edtAlamatToko"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Alamat lengkap toko"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status Toko"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000"
                android:paddingTop="10dp"/>

            <Spinner
                android:id="@+id/spinnerStatusToko"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Person"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000"
                android:paddingTop="10dp"/>

            <EditText
                android:id="@+id/edtNamaKontakPerson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/edtNomorKontakPerson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="No. Telp"
                android:textSize="15sp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardFotoKtp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#EEEEEE">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imgKtpToko"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_ktpbg_addtoko"/>

                    <TextView
                        android:id="@+id/txtFotoKTP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Foto KTP"
                        android:layout_marginTop="5dp"
                        android:textSize="15sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foto Toko"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000"
            android:paddingTop="20dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardFotoToko"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="#EEEEEE">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imgFotoToko"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_cameraadd"/>

                    <TextView
                        android:id="@+id/txtFotoToko"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Foto toko tampak depan"
                        android:layout_marginTop="5dp"
                        android:textSize="15sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lokasi Toko"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000"
                android:paddingTop="20dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnTambahMapsToko"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="#EEEEEE">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:id="@+id/imgLokasiToko2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:src="@drawable/maps"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <ImageView
                        android:id="@+id/imgLokasiToko1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="35dp"
                        android:visibility="visible"
                        android:src="@drawable/ic_locatebg"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txtLokasiToko"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Lokasi Toko"
                        android:textStyle="bold"
                        android:visibility="visible"
                        android:textSize="15sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imgLokasiToko1" />

                </androidx.constraintlayout.widget.ConstraintLayout>




            </androidx.cardview.widget.CardView>

            <ProgressBar
                android:id="@+id/loadingAddToko"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:layout_marginTop="10dp"
                />

            <Button
                android:id="@+id/btnTambahToko"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#4F9FC2"
                android:layout_marginBottom="50dp"
                android:textColor="#fff"
                android:text="Tambah"
                android:textSize="15sp"/>


        </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</LinearLayout>
